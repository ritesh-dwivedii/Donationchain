<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blockchain Donation Platform</title>
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;,">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/web3@4.5.0/dist/web3.min.js"></script>
    <!-- Add loading spinner styles -->
    <style>
        .loading {
            position: relative;
        }
        .loading:after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            top: 0;
            left: 50%;
            margin-top: 12px;
            margin-left: -8px;
            border: 2px solid #fff;
            border-radius: 50%;
            border-color: #fff transparent #fff transparent;
            animation: loading 1.2s linear infinite;
        }
        @keyframes loading {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .campaign-card {
            transition: transform 0.2s ease-in-out;
        }
        .campaign-card:hover {
            transform: translateY(-4px);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-blue-600">ðŸŒŸ DonationChain</span>
                </div>
                <div class="flex items-center">
                    <span id="wallet-status" class="px-4 py-2 rounded-full text-sm font-medium bg-gray-100">Not connected</span>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Create Campaign Section -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Create Campaign</h2>
                    <div class="space-y-4">
                        <div>
                            <label for="campaign-title" class="block text-sm font-medium text-gray-700">Campaign Title</label>
                            <input type="text" id="campaign-title" 
                                class="mt-1 block w-full px-3 py-2 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Enter a catchy title">
                        </div>
                        <div>
                            <label for="campaign-description" class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea id="campaign-description" rows="4" 
                                class="mt-1 block w-full px-3 py-2 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Describe your campaign"></textarea>
                        </div>
                        <div>
                            <label for="campaign-target" class="block text-sm font-medium text-gray-700">Target Amount (ETH)</label>
                            <input type="number" id="campaign-target" 
                                class="mt-1 block w-full px-3 py-2 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="0.00" step="0.01" min="0">
                        </div>
                        <button onclick="createCampaign()" 
                            class="w-full bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                            Create Campaign
                        </button>
                    </div>
                </div>
            </div>

            <!-- Active Campaigns Section -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-900">Active Campaigns</h2>
                        <button onclick="loadCampaigns()" 
                            class="text-blue-600 hover:text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg px-4 py-2 text-sm font-medium">
                            ðŸ”„ Refresh
                        </button>
                    </div>
                    <div id="campaigns-list" class="space-y-6">
                        <!-- Campaigns will be dynamically inserted here -->
                    </div>
                </div>

                <!-- Make Donation Section -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Make a Donation</h2>
                    <div class="space-y-4">
                        <div>
                            <label for="campaign-select" class="block text-sm font-medium text-gray-700">Select Campaign</label>
                            <select id="campaign-select" 
                                class="mt-1 block w-full px-3 py-2 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                <option value="">Select a campaign</option>
                            </select>
                        </div>
                        <div>
                            <label for="donation-amount" class="block text-sm font-medium text-gray-700">Amount (ETH)</label>
                            <div class="mt-1 relative rounded-lg shadow-sm">
                                <input type="number" id="donation-amount" 
                                    class="block w-full px-3 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent pr-12"
                                    placeholder="0.00" step="0.01" min="0">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-gray-500 sm:text-sm">ETH</span>
                                </div>
                            </div>
                        </div>
                        <button onclick="donate()" 
                            class="w-full bg-green-600 text-white px-4 py-3 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200">
                            Make Donation
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Toast Messages -->
    <div id="toast" class="fixed bottom-4 right-4 transform transition-transform duration-300 translate-y-full">
        <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-4 max-w-md">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <p id="toast-message" class="text-sm font-medium text-gray-900"></p>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/donation.js"></script>
</body>
</html> 